/* components/classic/classicproductlistitem/index.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  padding: 15rpx;
  box-sizing: border-box
}

.product-img {
  width: 150rpx;
  height: 150rpx;
  box-sizing: border-box;
  overflow: hidden
}

.product-des {
  flex-grow:1;
  margin-left: 10rpx;
  position: relative
}

.product-des .title {
  font-size: 28rpx;
  color: black;
}

.product-des .price {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
  color: #3D8946;
  margin-top: 20rpx;
}

.product-des .buy-count {
  font-size: 22rpx;
  color: gray;
}

.product-des .buy {
  width: 150rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  bottom: 0rpx;
}