/* components/classic/titlelist/index.wxss */
.container {
  width: 100%;
  height: 100%;
}

.scroll {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: scroll;
}

.scroll::-webkit-scrollbar {
  display: none;
}

.item {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 26rpx;
  font-weight: bold;
  position: relative;
  color: #646464;
}

.selected {
  font-size: 30rpx;
  color: #3D8946;
  font-weight: bolder;
  background-color: white
}

.selected-line {
  width: 8rpx;
  height: 40rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background: #3D8946
}