/* components/mine/userinfogroup/index.wxss */
.container {
  width: 100%;
  height: auto;
}

.user-info-container {
  width: auto;
  margin: 92rpx 30rpx 0 30rpx;
  border-width: 0rpx 1rpx 1rpx 1rpx;
  border-color: #f4f4f4;
  border-style: solid;
  border-radius: 20rpx;
  box-sizing: border-box;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.user-base-info-container {
  width: 100%;
  height: 160rpx;
  text-align: center;
}

.user-business-info-container {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.user-avatar {
  position: relative;
  margin: 0 auto;
  width: 160rpx;
  height: 160rpx;
  top: -80rpx;
  border-width: 10rpx;
  border-color: white;
  border-style: solid;
  border-radius: 80rpx;
  box-sizing: border-box;
}

.user-name {
  position: relative;
  margin: 0 auto;
  top: -80rpx;
  display: block;
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.user-business-info-container {
  text-align: center;
  color: white;
  display: flex;
  justify-content: space-around;
  align-items: center
}

.common-business-item-view {
  height: auto;
  color: #3D8946;
  font-weight: bold;
  text-align: center;
}

.user-business-info-container .count {
  display: block;
  font-size: 30rpx;
  color: black;
}

.user-business-info-container .title {
  display: block;
  font-size: 30rpx;
  color: #666666;
}