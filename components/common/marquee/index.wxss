/* components/common/activityindicatorview/index.wxss */
.container {
  width: 100%;
  height: 100%;
}

.load-circle {
  width: 150rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.load-circle text{
    display: block;
    width: 16rpx;
    height: 16rpx;
    background-color: #3D8946;
    border-radius: 8rpx;
    animation: circle-scale 1.2s linear infinite;
    -webkit-animation: circle-scale 1.2s linear infinite;
}

.load-circle text:nth-child(1){
    /* transform: scale(0.5); */
    /* transform: rotate(0deg); */
    animation-delay: 0.2s;
}

.load-circle text:nth-child(2){
    /* transform: rotate(0deg); */
    animation-delay: 0.4s;
}

.load-circle text:nth-child(3){
    /* transform: rotate(0deg); */
    animation-delay: 0.6s;
}

.load-circle text:nth-child(4){
    /* transform: rotate(0deg); */
    animation-delay: 0.8s;
}

.load-circle text:nth-child(5){
    /* transform: rotate(0deg); */
    animation-delay: 1.0s;
}

@keyframes circle-scale {
    0%{
      transform: scale(1);
      opacity: 1;
    }
    50%{
      transform: scale(0.5);
      opacity: 0.5;
    }
    100%{
      transform: scale(0.2);
      opacity: 0.2;
    }
}