/* components/orderdetail/orderinfo/index.wxss */
.container {
  width: 100%;
  background-color: white
}

.container-title {
  display: inline-block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #e4e4e4;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.order-container {
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}

.title {
  width: 100%;
  height: 50rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}

.value {
  font-size: 26rpx;
}