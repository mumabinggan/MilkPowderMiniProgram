/* components/productdetail/selectskuview/index.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.mask {
  width: 100%;
  height: 50%;
  background-color: black;
  opacity: 0.6;
}

.content-view {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  background-color: white;
  /* background-color: red; */
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}

.header-view {
  width: 100%;
  height: 120rpx;
  background-color: green;
}

.header-image {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  top: -50rpx;
  left: 30rpx;
  border-radius: 20rpx;
  border: 10rpx solid;
  box-sizing: border-box;
  border-color: white;
}

.price {
  position: relative;
  left: 70rpx;
  top: -70rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 44rpx;
  font-weight: bold;
  color: #EC5C2A
}

.price-unit {
  font-size: 30rpx;
  color: #EC5C2A
}

.current-price-dots {
  font-size: 26rpx;
  color: #EC5C2A
}

.origin-price {
  margin-left: 14rpx;
  font-size: 28rpx;
  color: gray;
  text-decoration: line-through;
  font-weight: normal;
}

.close-image {
  position: relative;
  right: -320rpx;
  top: -70rpx;
  width: 90rpx;
  height: 90rpx;
  background-color: red;
}


.select-view {
  width: 100%;
  flex-grow: 1;
  height: 310rpx;
}

.spec-view {
  display: block;
  width: 100%;
}

.buy-count {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.buy-count-title {
  font-size: 30rpx;
}

.buy-count-view {
  width: 150rpx;
  height: 60rpx;
}

.footer-view {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 2rpx solid #F6F6F6;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.shop-cart-view {
  width: 40%;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #3D8946;
  color: white;
  border-radius: 35rpx
}

.buy-view {
  width: 40%;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #3D8946;
  color: white;
  border-radius: 35rpx
}


