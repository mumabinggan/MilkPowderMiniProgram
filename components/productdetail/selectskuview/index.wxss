/* components/productdetail/selectskuview/index.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.mask {
  width: 100%;
  height: 50%;
  background-color: black;
  opacity: 0;
}

.content-view {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  background-color: white;
  /* background-color: red; */
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  transform:translateY(590rpx);
}

.header-view {
  width: 100%;
  height: 120rpx;
  background-color: white;
  border-bottom: 2rpx solid #F6F6F6;
}

.header-image {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  top: -50rpx;
  left: 30rpx;
  border-radius: 20rpx;
  border: 10rpx solid;
  box-sizing: border-box;
  border-color: white;
}

.price {
  position: relative;
  left: 70rpx;
  top: -70rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 44rpx;
  font-weight: bold;
  display: inline-block;
  color: #3D8946
}

.price-unit {
  font-size: 26rpx;
}

.current-price-dots {
  font-size: 26rpx;
}

.current-price-int-low {
  font-size: 26rpx;
}

.origin-price {
  padding-left: 10rpx;
  font-size: 28rpx;
  color: gray;
  text-decoration: line-through;
  font-weight: normal;
}

.select-count {
  
}

.close-image {
  position: fixed;
  right: 0rpx;
  width: 90rpx;
  height: 90rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.select-view {
  width: 100%;
  flex-grow: 1;
  height: 310rpx;
}

.spec-view {
  display: block;
  width: 100%;
}

.buy-count {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.buy-count-title {
  font-size: 30rpx;
}

.buy-count-view {
  width: 150rpx;
  height: 60rpx;
}

.footer-view {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 2rpx solid #F6F6F6;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.footer-view .common {
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #3D8946;
  color: white;
  border-radius: 35rpx
}

.confirm-view {
  width: 100%;
}

.shop-cart-view {
  width: 40%;
}

.buy-view {
  width: 40%;
}



