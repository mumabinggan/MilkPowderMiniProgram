<!--components/productdetail/selectskuview/index.wxml-->
<view class="container">
  <view class="mask" 
        animation="{{maskAnimation}}"
        catch:tap="onClose">
  </view>
  <view class="content-view" animation="{{contentAnimation}}">
      <view class="header-view">
        <image class="header-image"
            src="{{skuImageUrl}}"
            mode="aspectFill">
        </image>
        <text class="price"><text class="price-unit">¥</text>
          <text class="current-price-int">{{priceTitle}}<text wx:if="{{!showSkuPrice}}" class="current-price-int-low">起</text></text>
          <text wx:if="{{showSkuPrice}}" class="origin-price">¥{{sku.crossedPrice}}</text>
        </text>
        <image class="close-image"
            src="{{closeIcon}}"
            mode="aspectFit"
            catch:tap="onClose">
        </image>
      </view>
      <scroll-view class="select-view"
                    scroll-y="true">
        <v-product-sku-select-spec-item-view class="spec-view"
            wx:for="{{product.specList}}"
            wx:key="{{index}}" 
            data-id="{{index}}"
            spec="{{item}}"
            specValueId="{{specList[index].specValueId}}"
            index="{{index}}"
            catch:onSelected="onSelected">
        </v-product-sku-select-spec-item-view>
        <view class="buy-count">
          <text class="buy-count-title">购买数量：</text>
          <v-add-products class="buy-count-view"
                        count="{{count}}"
                        bind:onAdd="handleAddCount"
                        bind:onSub="handleSubCount">
          </v-add-products>
        </view>
      </scroll-view>
      <view class="footer-view">
        <text wx:if="{{entrance != 1}}" 
              class="common confirm-view"
              catch:tap="onConfirm">确定</text>
        <text wx:if="{{entrance == 1}}" class="common shop-cart-view"
              catch:tap="onAddToShopCart">加入购物车</text>
        <text wx:if="{{entrance == 1}}" 
              class="common buy-view"
              catch:tap="onBuy">立即购买</text>
      </view>
  </view>
</view>
