/* components/productdetail/producttoolbar/index.wxss */
.container {
  width: 100%;
  height: 100rpx;
  border-top: 1rxp solid #E4E4E4;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white
}

.title {
  width: 100%;
  height: 20rpx;
  text-align: center;
  font-size: 20rpx;
}

.home-view {
  width: 15%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}

.home-image {
  width: 100%;
  height: 40%;
}

.favorite-view {
  width: 15%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}

.favorite-image {
  width: 100%;
  height: 40%;
}

.shop-cart-view {
  margin-left: 40rpx;
  width: 30%;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #3D8946;
  color: white;
  border-radius: 35rpx 0 0 35rpx
}

.buy-view {
  width: 28%;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #3D7D46;
  color: white;
  border-radius: 0 35rpx 35rpx 0
}