/* components/productdetail/productinfo/index.wxss */
.container {
  width: 100%;
}

.carousel-view {
  width: 100%;
  height: 750rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.product-brief-info {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box
}

.price {
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 44rpx;
  font-weight: bold;
  color: #EC5C2A
}

.price-unit {
  font-size: 26rpx;
  color: #EC5C2A
}

.current-price-dots {
  font-size: 26rpx;
  color: #EC5C2A
}

.origin-price {
  font-size: 28rpx;
  color: gray;
  text-decoration: line-through;
  font-weight: normal;
}

.shareIcon {
  display: block;
  width: 90rpx;
  height: 90rpx;
  float: right;
  padding: 23rpx 0 23rpx 36rpx;
  box-sizing: border-box;
}

.title {
  display: inline-block;
  width: 100%;
  line-height: 48rpx;
  font-size: 30rpx;
}

.buy-count {
  display: inline-block;
  font-size: 24rpx;
  color: gray;
  height: 60rpx;
  line-height: 60rpx;
}