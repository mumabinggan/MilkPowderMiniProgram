/* components/home/shop/index.wxss */
.container {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  background-color: white;
}

.shop-view {
  width: 100%;
  height: 140rpx;
  padding: 0 10rpx 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.shop-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
}

.shop-title {
  margin-left: 20rpx;
  flex-grow: 1;
  font-size: 30rpx;
  font-weight: bold;
}

.shop-phone {
  margin-left: 10rpx;
  width: 80rpx;
  height: 80rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.shop-chat {
  /* margin-left: 20rpx; */
  width: 80rpx;
  height: 80rpx;
  padding: 6rpx;
  box-sizing: border-box;
}


