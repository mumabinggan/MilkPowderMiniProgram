/* components/home/broadcast/index.wxss */
.container {
  width: 100%;
  height: 60rpx;
  background-color: #F6F6F6;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 0 20rpx;
  box-sizing: border-box;
}

.item-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.item-title-view {
  height: 100%;
  font-weight: bold;
  line-height: 60rpx;
  flex-grow: 1;
  position: relative;
  overflow: hidden;
}

.title {
  white-space: nowrap;
  position: absolute;
}