/* components/productlist/productfiltertool/index.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.base-select {
  width: 25%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  height: 80rpx;
  line-height: 80rpx;
  color: #444444;
  font-size: 30rpx;
  font-weight: bold;
}

.selected-title {
  color: #3D8946
}

.sort-icon {
  padding-bottom: 2rpx;
  width: 30rpx;
  height: 30rpx;
}

.show-type {
  width: 10%;
  height: 100%;
  text-align: center;
  box-sizing: border-box;
  padding: 22rpx;
}
