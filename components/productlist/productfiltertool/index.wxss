/* components/productlist/productfiltertool/index.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.base-select {
  width: 25%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  height: 80rpx;
  line-height: 80rpx;
  color: #2B2B2B;
  font-size: 30rpx;
}

.selected-title {
  color: #ED604E
}

.sort-icon {
  box-sizing: border-box;
  margin-left: 10rpx;
  width: 20rpx;
  height: 20rpx;
}

.show-type {
  width: 10%;
  height: 100%;
  text-align: center;
  box-sizing: border-box;
  padding: 22rpx;
}
