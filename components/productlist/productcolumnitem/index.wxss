/* components/productlist/productcolumnitem/index.wxss */
.container {
  width: 340rpx;
  display: flex;
  flex-direction:column;
  justify-content:flex-start;
  background-color: white;
  border-radius: 16rpx;
}

.product-img {
  width: 100%;
  height: 340rpx;
}

.product-des {
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
  position: relative;
  display: flex;
  flex-direction:column;
  overflow: hidden
}

.title {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: black;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical
}

.buy-count {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: gray;
}

.price {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: block;
  color: #3D8946;
}

.buy {
  width: 80rpx;
  height: 80rpx;
  padding: 20rpx 0rpx 20rpx 20rpx;
  box-sizing: border-box;
  position: absolute;
  right: 0;
  bottom: 0rpx;
}