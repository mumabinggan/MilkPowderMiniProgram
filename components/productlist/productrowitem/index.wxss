/* components/productlist/productrowitem/index.wxss */
.container {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  padding: 15rpx;
  box-sizing: border-box;
  background-color: white;
}

.product-img {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 6rpx;
}

.product-des {
  flex-grow: 1;
  margin-left: 20rpx;
  position: relative;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 8rpx;
  padding-right: 20rpx;
}

.product-des .title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666666;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}

.product-des .buy-count {
  font-size: 22rpx;
  font-weight: bold;
  color: #999999;
}

.product-des .buy {
  width: 80rpx;
  height: 80rpx;
  padding: 16rpx;
  box-sizing: border-box;
  position: absolute;
  right: 6rpx;
  bottom: -4rpx;
}

.line-view {
  width: 100%;
  height: 2rpx;
  background-color: #F3F4F7;
  position: absolute;
  left: 190rpx;
  bottom: 0rpx;
}