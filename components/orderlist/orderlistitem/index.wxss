/* components/orderlist/orderlistitem/index.wxss */
.container {
  width: 100%;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background-color: white
}

.container:last-child {
  margin-bottom: 0rpx;
}


.header {
  width: 100%;
  height: 120rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #F7F7F7;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  flex-wrap: wrap;
}

.header .title {
  width: 50%;
  font-size: 30rpx;
  font-weight: bold;
  color: black;
}

.header .order-status {
  width: 50%;
  font-size: 28rpx;
  font-weight: bold;
  color: #3D8946;
  text-align: right;
}

.header .order-no {
  width: 60%;
  font-size: 26rpx;
  color: #666666;
}

.header .order-time {
  width: 40%;
  font-size: 26rpx;
  color: #666666;
  text-align: right;
}

.order-state-view {
  height: 100%;
  display: flex;
  align-items: center;
}

.middle {
  width: 100%;
  border-bottom: 1rpx solid #F7F7F7;
}

.products {
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
}

.products:first-child {
  margin-left: 20rpx;
}

.product-item {
  display: inline-block;
  width: 170rpx;
  height: 100%;
  margin-right: 20rpx;
  padding: 10rpx 0 8rpx;
  box-sizing: border-box;
  position: relative;
}

.product-item-img {
  width: 100%;
  height: 100%;
}

.product-item-count {
  position: absolute;
  right: 6rpx;
  bottom: 10rpx;
  font-size: 26rpx;
  color: #666666;
}

.total-count {
  display: inline-block;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: right;
  font-size: 26rpx;
  color: #666666;
}

.total-count-value {
  font-weight: bold;
  color: #3D8946;
  padding: 0rpx 6rpx;
}

.price-title {
  font-size: 26rpx;
  color: #808080;
  margin-left: 20rpx;
}

.price {
  font-size: 30rpx;
  font-weight: bold;
  color: #3D8946;
  margin-right: 20rpx;
}

.price-unit {
  font-size: 22rpx;
}

.footer {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center
}

.order-action-list {
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
}

