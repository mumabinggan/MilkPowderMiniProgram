/* components/classic/shopcartsettlement/index.wxss */
.container {
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.select-products {
  width: 110rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.select-button {
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
}

.select-text {
  font-size: 28rpx;
  display: block;
  color: black;
}

.price {
  width: auto;
  height: 100%;
  padding: 6rpx 20rpx;
  box-sizing: border-box;
  flex-grow: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  font-weight: bold;
}

.currentTotalPriceTitle {
  color: #444444
}

.currentTotalPrice {
  color: #3D8946
}

.currentTotalPriceFont {
  width: 100%;
  height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 60rpx;
}

.totalPrice {
  width: 100%;
  height: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #999999;
}

.settlement {
  width: auto;
  height: 76rpx;
  background-color: #3D8946;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 76rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
  border-radius: 38rpx;
  color: white
}


