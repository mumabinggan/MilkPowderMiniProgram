/* components/classic/shopcartlistitem/index.wxss */
.container {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow:row;
  justify-content: space-between;
  align-items: center;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
}

.delete {
  width: 90px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #3D8946;
  background-color: #E6E6E6;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content,
.touch-move-active .delete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.selected-button {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.product-pic {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.product-des {
  width: auto;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  flex:1;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}

.title {
  width: 100%;
  font-size: 28rpx;
  font-weight: bold;
  color: #666666;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}

.sub-title {
  width: 100%;
  font-size: 24rpx;
  font-weight: bold;
  color: #999999;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical
}

.buy {
  width: 150rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  bottom: 10rpx
}

.line {
  width: 100%;
  height: 1rpx;
  background-color: #EEEEEE
}