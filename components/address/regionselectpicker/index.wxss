/* components/address/regionselectpicker/index.wxss */
.container {
  width: 100%;
  height: 100%;
}

.mask {
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.2;
}

.content-container {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  background-color: #F2F2F6
}

.selected-title {
  border-bottom: 4rpx solid #EC5C2A
}

.selected-item-list {
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #F2F2F6
}

.base-title {
  height: 100%;
  padding: 0 20rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  float: left;
  font-size: 30rpx;
}

.list {
  width: 100%;
  height: 520rpx;
  display: flex;
  flex-direction: column;
}


