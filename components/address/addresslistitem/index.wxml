<!--components/address/addresslistitem/index.wxml-->
<view class="container {{item.isTouchMove ? 'touch-move-active' : ''}}">
  <view class="content">
    <text class="image">{{firstName}}</text>
    <view class="info">
      <text class="name">{{item.name}}</text>
      <text class="phone">{{item.phone}}</text>
      <text class="address"><text class="default" wx:if="{{item.isDefault==true && showDefaultTips}}">默认</text>{{item.detailAddress}}
      </text>
    </view>
    <image wx:if="{{canEdit}}"
            class="edit"
            mode='aspectFit'
            src="{{editIcon}}"
            catch:tap="onEdit">
    </image>
  </view>
  <view class="delete" catch:tap="handleDelete">删除</view>
</view>
