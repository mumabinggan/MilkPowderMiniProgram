/* components/settlement/settlementproductitem/index.wxss */
.container {
  width: 100%;
  height: 240rpx;
  position: relative;
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: white;
}

.product-img {
  width: 160rpx;
  height: 160rpx;
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 6rpx;
}

.product-des {
  flex-grow:1;
  margin-left: 20rpx;
  padding: 10rpx 0;
  position: relative;
  box-sizing: border-box;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}

.product-des .title {
  font-size: 28rpx;
  color: black;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}

.product-des .sub-title {
  width: 100%;
  font-size: 24rpx;
  color: black;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical
}

.price-count {
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: space-between;
}

.price {
  line-height: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  color: #EC5C2A;
}

.buy-count {
  line-height: 40rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: gray;
}

.line-view {
  width: 100%;
  height: 2rpx;
  background-color: #F3F4F7;
  position: absolute;
  left: 190rpx;
  bottom: 0rpx;
}