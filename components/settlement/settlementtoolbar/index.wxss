/* components/settlement/settlementtoolbar/index.wxss */
.container {
  width: 100%;
  height: 100%;
  padding-left: 20rpx;
  background-color: white;
  border-top: 1rpx solid #E4E4E4;
  box-sizing: border-box
}

.price {
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 44rpx;
  font-weight: bold;
  color: #EC5C2A
}

.price-unit {
  font-size: 26rpx;
  color: #EC5C2A
}

.current-price-dots {
  font-size: 26rpx;
  color: #EC5C2A
}

.origin-price {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: gray;
  text-decoration: line-through;
  font-weight: normal;
}

.count {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: gray;
}

.buy {
  display: block;
  width: 28%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  font-weight: bold;
  float: right;
  color: white;
  background-color: #EC5C2A
}