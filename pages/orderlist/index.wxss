/* pages/orderlist/index.wxss */
.container {
  width: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0rpx;
  background-color: #F6F6F6;
}

.tabsview {
  width: 100%;
  top: 0rpx;
  position: fixed;
  z-index: 1000;
}

.scroll-view {
  position: fixed;
  top: 90rpx;
  bottom: 0rpx;
  background-color: #F6F6F6;
  z-index: 100;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.footer {
  width: 100%;
  height: 60rpx;
}

.finished-view {
  width: 100%;
  height: 100%;
}

.text {
  width: 100%;
  height: 100%;
  display: block;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
}

.empty-view {
  width: 100%;
  height: 100%;
  background-color: #F6F6F6;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
}