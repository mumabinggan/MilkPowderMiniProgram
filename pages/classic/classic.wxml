                list="{{classic}}"
                bind:onClick="handleTitleItem"
                selectedIndex="{{selectedTitleIndex}}">
  </v-title-list>
  <!-- <v-product-list class="product-list"
                  list="{{products}}"
                  bind:onAdd="handleAddCount"
                  bind:onSub="handleSubCount">
  </v-product-list> -->

  <scroll-view class="classicitem-content"
