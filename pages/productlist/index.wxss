/* pages/productlist/index.wxss */
.container {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-tool {
  width: 100%;
  height: 80rpx;
  position: fixed;
  background-color: white;
  left: 0;
  top: 0;
}

.base-list {
  width: 100%;
  height: 100%;
  background-color: #F2F2F2;
  padding-top: 84rpx;
  box-sizing: border-box;
}

.item-column {
  display: inline-block;
  margin: 20rpx 8rpx 0 18rpx;
  box-sizing: border-box;
  /* background-color: #F6F6F6; */
}

.footer {
  width: 100%;
  height: 30rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.base-action-list {
  width: 100%;
  position: fixed;
  left: 0;
  top: 82rpx;
  bottom: 0;
}

.quick-tool {
  position: fixed;
  right: 20rpx;
  bottom: 140rpx;
}

.select-sku-pop-view {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background-color: #FFFFFF00;
}