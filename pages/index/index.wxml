<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <view class="sss"
          catch:tap="test">测试一下</view>
    <button class="button" wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 
      <image src="../../images/app_icon.png"></image>
    </button>
    <!-- <button class="button" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
    获取手机号
      
    </button> -->
    
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
    <!-- 获取手机号 -->
    <button class="buttonwww" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber"> 获取头像昵称 
      <image src="../../images/app_icon.png"></image>
    </button>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <open-data type="userAvatarUrl"></open-data>
<open-data type="userNickName"></open-data>
</view>
