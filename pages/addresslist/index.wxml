<!--pages/address/index.wxml-->
<view class="container">
  <view class="address-container {{canAdd?'address-container-padding':''}}">
    <v-address-list-item wx:for="{{items}}" 
                          wx:key="{{item.id}}"
                          class="item"
                          item="{{item}}"
                          catch:tap="onAddressItem"
                          data-id="{{item.id}}"
                          data-index="{{index}}"
                          bindtouchstart="touchstart" bindtouchmove="touchmove"
                          bind:onDelete="handleDelete">
    </v-address-list-item>
  </view>
  <text class="add-address"
        wx:if="{{canAdd}}"
        catch:tap="onAddAddress">添加新地址</text>
</view>
