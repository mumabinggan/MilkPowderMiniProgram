.container {
  width: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0rpx;
  background-color: #F4F4F4;
}

.content-view {
  width: 100%;
  height: auto;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.fix-full-content-view {
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

.toolbar {
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.fix-full-view {
  height: 160rpx;
}

.quick-tool {
  position: fixed;
  right: 20rpx;
  bottom: 140rpx;
}

.select-sku-pop-view {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background-color: #FFFFFF00;
}