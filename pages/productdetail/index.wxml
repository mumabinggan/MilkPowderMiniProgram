<!--pages/productdetail/index.wxml-->
<view class="container">
  <view class="content-view {{isFullSucreen?'fix-full-content-view':''}}">
    <v-product-info-view class="product-info-view"
                        product="{{product}}"
                        bind:onShare="handleShare">
    </v-product-info-view>
    <v-product-select-spec-view 
                            wx:if="{{shouldShowSelectSkuView}}"
                            class="product-select-spec-view"
                            content="{{selectedSpecContent}}"
                            ontap="handleSelectSku">
    </v-product-select-spec-view>
    <v-product-detail-view class="product-detail-view"
                            product="{{product}}">
    </v-product-detail-view>
    <v-product-price-des-view class="product-price-des-view">
    </v-product-price-des-view>
    <v-product-detail-toolbar class="toolbar {{isFullSucreen?'fix-full-view':''}}"
                              product="{{product}}"
                              bind:onHome="handleToHome"
                              bind:onFavorite="handleFavorite"
                              bind:onAddToShopCart="handleAddToShopCart"
                              bind:onBuy="handleBuy">
    </v-product-detail-toolbar>
    <v-product-quick-tool class="quick-tool"
                          shopCount="{{shopCount}}"
                          showTopIcon="{{showTopIcon}}"
                          catch:onToShopCart="handleToShopCart"
                          catch:onToTop="handleToTop">
    </v-product-quick-tool>
    <v-product-pop-select-spec-view 
                  wx:if="{{isShowingSelectSkuView}}"
                  class="select-sku-pop-view"
                  product="{{product}}"
                  entrance="{{entrance}}"
                  catchtouchmove="handleMove"
                  catch:onClose="handleCloseSelectSkuView">
    </v-product-pop-select-spec-view>
  </view>
</view>
